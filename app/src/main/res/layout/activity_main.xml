<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lunarDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        tools:text="农历 XXX年 XX月XX"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/viewModeToggle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_toggle_group"
        app:layout_constraintTop_toBottomOf="@id/lunarDateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="月"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:button="@null"
            android:textColor="@color/selector_toggle_text"
            android:background="@drawable/selector_toggle_bg"
            android:checked="true"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rbWeek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="周"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:button="@null"
            android:textColor="@color/selector_toggle_text"
            android:background="@drawable/selector_toggle_bg"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rbDay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:button="@null"
            android:textColor="@color/selector_toggle_text"
            android:background="@drawable/selector_toggle_bg"
            android:gravity="center"/>

    </RadioGroup>

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:cv_monthHeaderResource="@layout/calendar_month_header_layout"
        app:layout_constraintTop_toBottomOf="@id/viewModeToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.kizitonwose.calendar.view.WeekCalendarView
        android:id="@+id/weekCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cv_dayViewResource="@layout/calendar_day_layout"
        app:layout_constraintTop_toBottomOf="@id/viewModeToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addEventFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Event"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/importEventFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Import Event"
        android:src="@android:drawable/stat_sys_download"
        app:layout_constraintBottom_toTopOf="@id/addEventFab"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>